{
  "extends": [
    "config:base",
    ":gitSignOff",
    ":disableDependencyDashboard"
  ],
  "ignorePaths": [
    ".github/**"
  ],
  "labels": [
    "dependency"
  ],
  "separateMinorPatch": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^v?0\\./",
      "automerge": true,
      "platformAutomerge": false,
      "labels": [
        "dependency",
        "automerge"
      ]
    }
  ]
}
